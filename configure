#!/usr/bin/env bash

# Check for g++
if ! command -v g++ &> /dev/null
then
    echo "g++ could not be found. Please install g++."
    exit 1
fi

# Check for make
if ! command -v make &> /dev/null
then
    echo "make could not be found. Please install make."
    exit 1
fi

echo "Environment OK. You can now run 'make'."
exit 0
